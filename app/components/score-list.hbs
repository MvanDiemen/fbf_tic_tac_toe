<div class="mdc-data-table">
  <table class="mdc-data-table__table" aria-label="Scoreboard">
    <thead>
      <tr class="mdc-data-table__header-row">
        <th class="mdc-data-table__header-cell" role="columnheader" scope="col">Player name</th>
        <th class="mdc-data-table__header-cell mdc-data-table__header-cell--numeric" role="columnheader" scope="col">
          Wins</th>
      </tr>
    </thead>
    <tbody class="mdc-data-table__content">
      {{#each @playerList as |player|}}
      <tr class="mdc-data-table__row">
        <td class="mdc-data-table__cell">{{player.name}}</td>
        <td class="mdc-data-table__cell mdc-data-table__cell--numeric">{{player.wins}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>