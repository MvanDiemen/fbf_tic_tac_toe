{{#if this.showReset}}
{{game-over-modal reset=(fn this.resetGame) title=this.result}}
{{/if}}

<div class="mdc-layout-grid mdc-top-app-bar--fixed-adjust">
  <div class="mdc-layout-grid__inner">
    <div class="mdc-layout-grid__cell mdc-layout-grid__cell-span-6">
      <div class="mdc-layout-grid__inner">

        <div class="mdc-layout-grid__cell mdc-layout-grid__cell-span-4">
          <div {{action 'tagField' this.userIcon 'one'}} class='square-card mdc-card mdc-card--outlined'>
            {{this.one}}
          </div>
        </div>
        <div class="mdc-layout-grid__cell mdc-layout-grid__cell-span-4">
          <div {{action 'tagField' this.userIcon 'two'}} class='square-card mdc-card mdc-card--outlined'>
            {{this.two}}
          </div>
        </div>
        <div class="mdc-layout-grid__cell mdc-layout-grid__cell-span-4">
          <div {{action 'tagField' this.userIcon 'three'}} class='square-card mdc-card mdc-card--outlined'>
            {{this.three}}
          </div>
        </div>
      </div>

      <div class="mdc-layout-grid__inner">
        <div class="mdc-layout-grid__cell mdc-layout-grid__cell-span-4">

          <div {{action 'tagField' this.userIcon 'four'}} class='square-card mdc-card mdc-card--outlined'>
            {{this.four}}
          </div>
        </div>
        <div class="mdc-layout-grid__cell mdc-layout-grid__cell-span-4">
          <div {{action 'tagField' this.userIcon 'five'}} class='square-card mdc-card mdc-card--outlined'>
            {{this.five}}
          </div>
        </div>
        <div class="mdc-layout-grid__cell mdc-layout-grid__cell-span-4">
          <div {{action 'tagField' this.userIcon 'six'}} class='square-card mdc-card mdc-card--outlined'>
            {{this.six}}
          </div>
        </div>
      </div>

      <div class="mdc-layout-grid__inner">
        <div class="mdc-layout-grid__cell mdc-layout-grid__cell-span-4">
          <div {{action 'tagField' this.userIcon 'seven'}} class='square-card mdc-card mdc-card--outlined'>
            {{this.seven}}
          </div>
        </div>
        <div class="mdc-layout-grid__cell mdc-layout-grid__cell-span-4">
          <div {{action 'tagField' this.userIcon 'eight'}} class='square-card mdc-card mdc-card--outlined'>
            {{this.eight}}
          </div>
        </div>
        <div class="mdc-layout-grid__cell mdc-layout-grid__cell-span-4">
          <div {{action 'tagField' this.userIcon 'nine'}} class='square-card mdc-card mdc-card--outlined'>
            {{this.nine}}
          </div>
        </div>
      </div>
    </div>

    <div class="mdc-layout-grid__cell mdc-layout-grid__cell-span-6">
      {{score-list playerList=this.playerList}}
    </div>
  </div>
</div>